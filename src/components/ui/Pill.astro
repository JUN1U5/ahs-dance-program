---
interface Props {
	variant?: 'small';
}

const { variant } = Astro.props;
---

<div class:list={['pill', { small: variant === 'small' }]}>
	<slot />
</div> 

<style>
	.pill {
		display: flex;
		padding: 0.5rem 1rem;
		gap: 0.5rem;
		color: var(--aw-color-accent);
		border: 1px solid var(--aw-color-accent);
		background-color: var(--aw-color-accent);
		border-radius: 999rem;
		font-size: var(--text-md);
		line-height: 1.35;
		white-space: nowrap;
	}

	.pill.small {
		padding: 0.25rem 0.5rem;
		font-size: var(--text-sm);
	}
</style>